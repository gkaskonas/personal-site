---
import BlogLayout from "@/layouts/BlogLayout.astro";
import { getCollection } from "astro:content";
import BlogCardModern from "@/components/BlogCardModern.astro";

const posts = await getCollection("blog", ({ data }) => !data.draft);
const sortedPosts = posts.sort(
  (a, b) => new Date(b.data.date).valueOf() - new Date(a.data.date).valueOf()
);

// First post is featured
const featuredPost = sortedPosts[0];
const remainingPosts = sortedPosts.slice(1);
---

<BlogLayout
  title="Peter Kaskonas Blog"
  description="Peter Kaskonas' personal Blog. Software engineer, AWS Certified Solutions Architect Professional, and AWS Certified DevOps Engineer Professional."
  canonical="https://peterkaskonas.com/blog"
>
  {/* Hero Section */}
  <div class="relative mb-16">
    {/* Background decoration */}
    <div
      class="absolute -top-20 -left-20 w-72 h-72 bg-primary/5 rounded-full blur-3xl -z-10"
    >
    </div>
    <div
      class="absolute -bottom-10 -right-20 w-96 h-96 bg-primary/5 rounded-full blur-3xl -z-10"
    >
    </div>

    <div class="space-y-4">
      <span
        class="inline-block px-4 py-1.5 text-sm font-medium text-primary bg-primary/10 rounded-full animate-fade-in"
      >
        Insights & Articles
      </span>
      <h1
        class="text-5xl md:text-6xl font-bold text-gray-900 dark:text-white animate-slide-up"
      >
        Blog
      </h1>
      <p
        class="text-xl text-gray-600 dark:text-gray-400 max-w-2xl animate-slide-up"
        style="animation-delay: 100ms"
      >
        Thoughts on AWS, DevOps, cloud architecture, and modern web development.
        Sharing insights from building scalable systems.
      </p>
    </div>
  </div>

  {
    sortedPosts.length === 0 ? (
      <div class="text-center py-20">
        <div class="w-16 h-16 mx-auto mb-6 rounded-2xl bg-gray-100 dark:bg-gray-800 flex items-center justify-center">
          <svg
            class="w-8 h-8 text-gray-400"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"
            />
          </svg>
        </div>
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">
          No posts yet
        </h2>
        <p class="text-gray-600 dark:text-gray-400">
          Check back soon for new content!
        </p>
      </div>
    ) : (
      <div class="space-y-12">
        {/* Featured Post */}
        {featuredPost && (
          <section>
            <BlogCardModern post={featuredPost} featured index={0} />
          </section>
        )}

        {/* Remaining Posts Grid */}
        {remainingPosts.length > 0 && (
          <section>
            <div class="flex items-center gap-4 mb-8">
              <h2 class="text-2xl font-bold text-gray-900 dark:text-white">
                More Articles
              </h2>
              <div class="flex-1 h-px bg-gradient-to-r from-gray-200 dark:from-gray-800 to-transparent" />
            </div>
            <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
              {remainingPosts.map((post, index) => (
                <BlogCardModern post={post} index={index + 1} />
              ))}
            </div>
          </section>
        )}
      </div>
    )
  }

  {/* Newsletter CTA (optional decoration) */}
  <section class="mt-20 p-8 md:p-12 rounded-3xl bg-gradient-to-br from-gray-900 to-gray-800 dark:from-gray-800 dark:to-gray-900 text-white relative overflow-hidden">
    {/* Decorative elements */}
    <div class="absolute top-0 right-0 w-64 h-64 bg-primary/10 rounded-full blur-3xl"></div>
    <div class="absolute bottom-0 left-0 w-48 h-48 bg-primary/10 rounded-full blur-3xl"></div>

    <div class="relative z-10 max-w-2xl">
      <h3 class="text-2xl md:text-3xl font-bold mb-4">
        Want to stay updated?
      </h3>
      <p class="text-gray-300 mb-6">
        Follow me on social media or check back regularly for new articles on cloud architecture, DevOps practices, and modern web development.
      </p>
      <div class="flex flex-wrap gap-4">
        <a
          href="https://www.linkedin.com/in/giedrius-k-7a2880a5/"
          class="inline-flex items-center gap-2 px-6 py-3 bg-white text-gray-900 font-medium rounded-full hover:bg-gray-100 transition-colors"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
          </svg>
          LinkedIn
        </a>
        <a
          href="https://github.com/gkaskonas"
          class="inline-flex items-center gap-2 px-6 py-3 bg-white/10 text-white font-medium rounded-full hover:bg-white/20 transition-colors border border-white/20"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
          GitHub
        </a>
      </div>
    </div>
  </section>
</BlogLayout>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fadeIn 0.6s ease-out forwards;
  }

  .animate-slide-up {
    animation: slideUp 0.6s ease-out forwards;
    opacity: 0;
  }

  @media (prefers-reduced-motion: reduce) {
    .animate-fade-in,
    .animate-slide-up {
      animation: none;
      opacity: 1;
    }
  }
</style>
